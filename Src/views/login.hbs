<section class="userpage-section">
    <div class="wrapper">
        <div class="container-fluid animated fadeInDown">
            <div class="feature-section-content">
                    <div class="featured-item white">
                        <br />
                        <div class="item-name"><span class="fa fa-sign-in"></span> Login</div>
                    </div>
            </div>
        </div>
    </div>
</section>

<section class="info-section">
    <div class="wrapper">
        <div class="container-fluid">
            <h3>Login Credentials</h3>
            <br />
            <div class="row">
                <div class="col-sm-12">
                    <form action="/login" method="post">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" name="email" value="{{email}}" autofocus>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        
                        {{> botField }}
                        
                        <button type="submit" class="btn btn-primary btn-lg">Log In</button>
                        <input type="hidden" name="_csrf" value="{{_csrf}}"/>
                        <div class="validationSummary">
                            <br />
                            {{#if messages}}
                                {{#each messages}}
                                    <div class="alert alert-danger">{{.}}</div>
                                {{/each}}
                            {{/if}}
                        </div>
                    </form>
    
                    <p><a href="/forgotPassword">Forgot your password?</a></p>
    
                    <p><a href="/register">Need an account? Sign Up!</a></p>
    
                </div>
            </div>
        </div>
    </div>
</section>
