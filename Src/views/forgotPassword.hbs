<section class="userpage-section">
    <div class="wrapper">
        <div class="container-fluid animated fadeInDown">
            <div class="feature-section-content">
                    <div class="featured-item white">
                        <br />
                        <div class="item-name"><span class="fa fa-key"></span> Forgot Your Password?</div>
                    </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="wrapper">
        <div class="container-fluid">
            <h2>Password Retrieval</h2>
            <br />
            <div class="row">
                <div class="col-lg-12">
                    Enter the email address you signed-up with and we'll email you details on how to reset your password.
                    <br /><br />
                    <form action="/forgotPassword" method="post">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="email" value="{{email}}" autofocus>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg">Reset Password</button>
                        <input type="hidden" name="_csrf" value="{{_csrf}}"/>
                        <br />
                        {{#if emailSent}}
                            <br /><div class="messageSummary">Thanks! A temporary password has been emailed to you. Please check your inbox. <br />Once it arrives please <a href="/login">login</a> and you can then reset the password if you'd like.</div>
                        {{/if}}
                        <div class="validationSummary">
                            <br />
                            {{#if messages}}
                                <ul>
                                    {{#each messages}}
                                        <li>{{.}}</li>
                                    {{/each}}
                                </ul>
                            {{/if}}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
